<Window x:Class="InventoryManagement.UI.EditInventoryItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Inventory Item" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Edit Inventory Item" FontSize="18" FontWeight="Bold" />

        <Label Content="Item Name:" />
        <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>

        <Label Content="Stock Quantity:" />
        <TextBox x:Name="StockQuantityTextBox" Margin="0,5,0,10" />

        <Label Content="Category:" />
        <TextBox x:Name="CategoryTextBox" Margin="0,5,0,10" />

        <Button Content="Save" Click="SaveButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>